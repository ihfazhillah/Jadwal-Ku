<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/paddingStart"
        android:layout_marginEnd="@dimen/paddingEnd"
        android:layout_marginTop="@dimen/containerSpace"
        android:layout_marginBottom="@dimen/containerSpace"
        tools:listitem="@layout/list_item_event"
        android:id="@+id/rvUpcoming"
        />
</LinearLayout>